{
  "name": "side-car-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm run electron:build:watch\" \"wait-on http://localhost:5174 dist-electron/preload.js && electron .\"",
    "electron:build": "node electron/build.js",
    "electron:build:watch": "tsc -p electron/tsconfig.electron.json --watch --preserveWatchOutput",
    "build": "npm run electron:build && vite build && electron-builder",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "wavesurfer.js": "^7.9.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "tailwindcss": "^3.4.16",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "local.sidecar.app",
    "productName": "Side-Car",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "win": {
      "target": ["nsis"]
    }
  }
}
